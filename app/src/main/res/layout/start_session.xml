<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Session"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_regular"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_more_color"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_login_bg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nishant Sanchaniya"
                android:textSize="10sp"
                android:textColor="#555"
                android:fontFamily="@font/montserrat_semibold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thetahealing"
                android:textSize="8sp"
                android:textColor="#555"
                android:fontFamily="@font/montserrat_semibold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28/03/2020"
                    android:textSize="8sp"
                    android:textColor="#555"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_watch" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:00 PM, 30 Mins"
                    android:textSize="8sp"
                    android:textColor="#555"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rsz_ic_course" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session ID: 5423"
                    android:textSize="8sp"
                    android:textColor="#555"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steve Jobs"
                    android:textSize="8sp"
                    android:textColor="#555"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    />

            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/email_login_btn"
                android:layout_marginTop="15dp"
                android:text="Start Session"
                android:background="@drawable/grident_button_background"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
